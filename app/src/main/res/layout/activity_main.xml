<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/system_color"
    tools:context="notes.notepad.notebook.keepnote.note.MainActivity">


    <TextView
        android:id="@+id/top_Airdoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/martel_sans_extrabold"
        android:text="Hi, Welcome"
        android:textColor="@color/txt_color"
        android:textSize="22dp"
        android:textStyle="bold"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/signin" />


    <Button
        android:id="@+id/login_btn"
        style="?borderlessButtonStyle"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/intrmdm"
        android:text="Let's Start"
        android:textAllCaps="false"
        android:textColor="@color/txt_color"
        android:textSize="20.5dp"
        android:textStyle="bold" />


</RelativeLayout>