<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_color">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="OCR Scan"
        android:fontFamily="@font/martel_sans_extrabold"
        android:textColor="@color/txt_color"
        android:textSize="33dp" />

    <ImageView
        android:id="@+id/slim"
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_page4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slim"
        android:text="Scan documents, books, hand written notes e.t.c"
        android:layout_margin="25dp"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/txt_color"/>

    <Button
        android:id="@+id/btnslider"
        android:layout_width="130dp"
        android:layout_height="40dp"
   android:layout_alignParentBottom="true"
        android:text="Next"
        android:textAllCaps="false"
        android:background="@drawable/select"
        android:backgroundTint="#FFFFFF"
        android:textSize="17sp"
        android:layout_marginBottom="30dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>